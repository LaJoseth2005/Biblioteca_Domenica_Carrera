<odoo>
    <data>
    
        <record model="ir.ui.view" id="biblioteca_ubicacion_list">
            <field name="name">biblioteca ubicacion list</field>
            <field name="model">biblioteca.ubicacion</field>
            <field name="arch" type="xml">
                <list>
                    <field name="ubicacion"/>
                    <field name="descripcion"/>
                </list>
            </field>
        </record>

        <record model="ir.ui.view" id="biblioteca_ubicacion_form">
            <field name="name">biblioteca ubicacion form</field>
            <field name="model">biblioteca.ubicacion</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="ubicacion"/>
                        <field name="descripcion"/>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="biblioteca_ubicacion_action_window">
            <field name="name">biblioteca ubicacion</field>
            <field name="res_model">biblioteca.ubicacion</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem name="Ubicacion menu" 
            id="biblioteca.ubicacion"
            parent="biblioteca_menu"
            action="biblioteca_ubicacion_action_window"/>

    </data>
</odoo>