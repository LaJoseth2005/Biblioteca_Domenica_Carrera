<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="biblioteca_libro_list">
      <field name="name">biblioteca libro list</field>
      <field name="model">biblioteca.libro</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="author_id"/>
          <field name="isbn"/>
          <field name="editorial_id"/>
          <field name="fechapubli"/>
          <field name="genero_id"/>
          <field name="numpaginas"/>
          <field name="disponi"/>
          <field name="ubicacion_id"/>
          <field name="ejemplares"/>
          <field name="costo"/>
          <field name="description"/>
        </list>
      </field>
    </record>

    <record model="ir.ui.view" id="biblioteca_libro_form">
      <field name="name">biblioteca libro form</field>
      <field name="model">biblioteca.libro</field>
      <field name="arch" type="xml">
        <form>
          <header>
                <button name="action_importar_libro" type="object" string="Importar desde OpenLibrary" class="btn-primary"/>
          </header>
          <sheet>

            <group>
              <field name="name"/>
              <field name="author_id"/>
              <field name="isbn"/>
              <field name="editorial_id"/>
              <field name="fechapubli"/>
              <field name="genero_id"/>
              <field name="numpaginas"/>
              <field name="disponi"/>
              <field name="ubicacion_id"/>
              <field name="ejemplares"/>
              <field name="costo"/>
              <field name="description"/>
            </group>
          </sheet>  
        </form>
      </field>
    </record>


