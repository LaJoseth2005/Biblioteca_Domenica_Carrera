          <field name="nombre"/>
          <field name="dni"/>
          <field name="cel"/>
          <field name="correo" widget="email"/>      
          <field name="direccion"/>
          <field name="tipousuario"/>      
          <field name="historialprestamo"/>
          <field name="prestamo_ids"/>            
        </list>
      </field>
